<div class="col-offset-3 col-6">
  <h1 style="color: chocolate"><%= @cat.name %></h1>
  <div class="col-offset-2 col-8">
    <img class="fa fa-spin" src="<%= @cat.picture %>" />
  </div>

  <div class="col-offset-2 col-8">
    <table>
      <tr>
        <th>Attribute</th>
        <th>Value</th>
      </tr>
      <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
        <tr>
          <td><%= attr_name.to_s.split('_').join(' ').capitalize %></td>
          <td><%= @cat.send(attr_name) %></td>
        </tr>
      <% end %>
    </table>

    <%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>

    <h2>Rental Requests</h2>
    <table>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Requester</th>
        <th>Status</th>
      </tr>
      <% @cat.rental_requests.order("start_date").each do |req| %>
        <%= render "req_tr", req: req %>
      <% end %>
    </table>
  </div>
</div>
